#!/bin/sh

# Exit on any error
set -e

echo "ğŸ” Running pre-commit checks..."

# Run type checking, linting, and tests via turbo pipeline
# (turbo caching makes lint-staged redundant)
echo "ğŸ§ª Running tests (includes type-check and lint via turbo)..."
