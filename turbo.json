{
  "$schema": "./node_modules/turbo/schema.json",
  "globalPassThroughEnv": ["CI", "GITHUB_ACTIONS"],
  "globalDependencies": [
    "tsconfig.json",
    "prettier.config.*",
    "pnpm-lock.yaml",
    "tsup.base.*",
    "eslint.config.*",
    "vitest.config.*"
  ],
  "globalEnv": ["BENCH_ROUTER", "BENCH_NO_VALIDATE", "BENCH_SECTIONS"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "test"],
      "outputs": ["dist/**"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tsup.config.*",
        "tsconfig.json",
        "package.json"
      ],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build", "lint", "type-check"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tests/**/*.{ts,tsx}",
        "vitest.config.*",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "!**/node_modules/**"
      ],
      "env": ["NODE_ENV"],
      "passThroughEnv": ["CI"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "**/*.{ts,tsx,js,jsx}",
        "!dist/**",
        "!coverage/**",
        "!**/node_modules/**",
        "eslint.config.*"
      ],
      "cache": true
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "**/*.{ts,tsx}",
        "!dist/**",
        "!**/node_modules/**",
        "tsconfig.json",
        "**/tsconfig.json"
      ],
      "cache": true
    },
    "lint:package": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["dist/**", "package.json"],
      "cache": true
    },
    "lint:types": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["dist/**", "package.json"],
      "cache": true
    }
  }
}
