# pnpm 10 settings
update-notifier=false
save-exact=true
git-tag-version=true
loglevel=error

# pnpm specific
auto-install-peers=true
strict-peer-dependencies=false

# Security: устанавливать только пакеты старше 1 дня (защита от compromised packages)
minimum-release-age=1440

# Security: строгая проверка build scripts (lifecycle scripts disabled by default in pnpm 10)
strict-dep-builds=true

# Auto-cleanup неиспользуемых записей каталога
cleanup-unused-catalogs=true

script-shell=bash
